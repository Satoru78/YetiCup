<Window x:Class="YetiCup.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YetiCup"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="450">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация:" FontSize="30" TextAlignment="Center" Margin="0,0,0,10"></TextBlock>
            <TextBlock Text="Идентификаnор:"></TextBlock>
            <TextBox Width="220" Name="txbID"></TextBox>
            <TextBlock Text="Название чемпионата:"></TextBlock>
            <TextBox Name="txbChampName" Width="220"></TextBox>
            <TextBlock Text="Пароль:"></TextBlock>
            <TextBox Name="txbPass" Width="220"></TextBox>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Войти" Name="btnLogin" Click="btnLogin_Click" Width="100"></Button>
                <Button Content="Отмена" Name="btnCancel" Click="btnCancel_Click" Width="100" Margin="20,0,0,0"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
